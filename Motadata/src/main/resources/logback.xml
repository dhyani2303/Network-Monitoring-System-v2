    </appender>

    <appender name="SENDER_LOGS" class="ch.qos.logback.core.FileAppender">
        <file>logs/sender.log</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>


    <appender name="POLLINGAPI_LOGS" class="ch.qos.logback.core.FileAppender">
        <file>logs/pollingAPI.log</file>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="PROCESSBUILDER_LOGS" class="ch.qos.logback.core.FileAppender">
